@model Patient
@{
    ViewData["Title"] = "Inserir Paciente";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                Pacientes
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Patient">Listagem</a>
            </li>
        </ol>
    </nav>

    <div class="row">
        <h1>Inserir: <small class="text-body-secondary">Paciente</small></h1>
    </div>

    <hr />
</div>

<form asp-action="Insert" class="container needs-validation" novalidate>
    <div class="row justify-content-center row-gap-3">

        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row row-gap-3 gap-md-0">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Nome completo" required>
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control" placeholder="__/__/____" required>
                <span asp-validation-for="BirthDate" class="invalid-feedback"></span>
            </div>
        </div>

        <div class="row row-gap-3 gap-md-0">
            <div class="col-md-4">
                <label asp-for="Weight" class="form-label"></label>
                <input asp-for="Weight" class="form-control" placeholder="Peso" required>
                <span asp-validation-for="Weight" class="invalid-feedback"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Height" class="form-label"></label>
                <input asp-for="Height" class="form-control" placeholder="Altura" required>
                <span asp-validation-for="Height" class="invalid-feedback"></span>
            </div>

            <div class="col-md-4 form-group">
                <label asp-for="Ethnicity" class="form-label"></label>
                <select asp-for="Ethnicity" asp-items="Html.GetEnumSelectList<Ethnicity>()" class="form-select"
                    required>
                    <option selcted value="">Selecione uma Etnia</option>
                </select>
                <span asp-validation-for="Ethnicity" class="invalid-feedback"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary float-end">Inserir</button>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}