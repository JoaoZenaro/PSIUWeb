@{
    ViewData["Title"] = "Pacientes";
}

@model IEnumerable<Patient>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Listagem de Pacientes
                        </h3>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                                <th>@Html.DisplayNameFor(model => model.Ethnicity)</th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td>@patient.Id</td>
                                    <td>@patient.Name</td>
                                    <td>@patient.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("pt-BR"))</td>
                                    <td>@patient.Ethnicity</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-6 fle">
                                                <a asp-controller="Patient" asp-action="Edit" asp-route-Id="@patient.Id">
                                                    <i class="bi bi-pencil-fill text-info" title="Editar"></i>
                                                </a>
                                            </div>
                                            <div class="col-6">
                                                <a asp-controller="Patient" asp-action="Delete" asp-route-Id="@patient.Id">
                                                    <i class="bi bi-trash3-fill text-danger" title="Excluir"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>